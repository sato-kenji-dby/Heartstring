{
	"name": "heartstring",
	"private": true,
	"version": "0.0.1",
	"main": "electron.cjs",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"electron": "vite build && electron .",
		"electron:dev": "concurrently \"npm run dev\" \"npm run electron:start\"",
		"electron:start": "wait-on http://localhost:5173 && cross-env ELECTRON_START_URL=http://localhost:5173 electron .",
		"rebuild": "electron-rebuild",
		"postinstall": "electron-rebuild"
	},
	"devDependencies": {
		"@electron/rebuild": "^4.0.1",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@types/node": "^20.11.24",
		"concurrently": "^9.2.0",
		"cross-env": "^7.0.3",
		"electron": "^29.1.0",
		"electron-builder": "^24.13.3",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"vite": "^6.2.6",
		"wait-on": "^8.0.3"
	},
	"dependencies": {
		"better-sqlite3": "^12.2.0",
		"music-metadata": "^11.6.0",
		"play-sound": "^1.1.6"
	}
}
