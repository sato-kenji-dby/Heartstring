{
	"name": "heartstring",
	"private": true,
	"version": "0.0.1",
	"main": "electron.cjs",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"electron": "vite build && electron .",
		"electron:dev": "concurrently \"npm run dev\" \"npm run electron:start\"",
		"electron:start": "wait-on http://localhost:5173 && cross-env ELECTRON_START_URL=http://localhost:5173 electron .",
		"rebuild": "electron-rebuild",
		"postinstall": "electron-rebuild",
		"lint": "prettier --check . && eslint .",
		"lint:fix": "prettier --write . && eslint --fix .",
		"test": "vitest run",
		"test:watch": "vitest",
		"build:app": "electron-builder"
	},
	"devDependencies": {
		"@electron/rebuild": "^4.0.1",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@testing-library/svelte": "^5.2.8",
		"@types/better-sqlite3": "^7.6.13",
		"@types/node": "^20.11.24",
		"concurrently": "^9.2.0",
		"cross-env": "^7.0.3",
		"electron": "^29.1.0",
		"electron-builder": "^24.13.3",
		"eslint": "^9.30.1",
		"eslint-plugin-svelte": "^3.10.1",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"vite": "^6.2.6",
		"vitest": "^3.2.4",
		"wait-on": "^8.0.3"
	},
	"dependencies": {
		"better-sqlite3": "^12.2.0",
		"music-metadata": "^11.6.0",
		"play-sound": "^1.1.6"
	}
}
