{
	"name": "heartstring",
	"private": true,
	"version": "0.0.1",
	"main": "electron.cjs",
	"type": "module",
	"scripts": {
    
    "lint": "prettier --check . && eslint .",
    "lint:fix": "prettier --write . && eslint --fix .",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "test": "vitest run",
    "test:watch": "vitest",

    
    "clean": "rimraf dist dist-electron",
    "rebuild": "electron-rebuild",
    "postinstall": "npm run rebuild",

    
    "build:frontend": "vite build",
    "build:electron:compile": "tsc --project tsconfig.electron.json",
    "build:electron:rename": "renamer --find \".js\" --replace \".cjs\" \"dist-electron/**/*.js\"",
    "build:electron": "npm run build:electron:compile && npm run build:electron:rename",
    "build": "npm run clean && npm run build:frontend && npm run build:electron",

    
    "dev:frontend": "vite dev",
    "watch:electron": "tsc-watch --project tsconfig.electron.json --onSuccess \"npm run build:electron:rename\"",
    "start:electron:dev": "nodemon",
    "dev": "npm run clean && concurrently \"npm:dev:frontend\" \"npm:watch:electron\" \"npm:start:electron:dev\"",

    
    "start": "electron dist-electron/electron.cjs",
    "build:app": "npm run build && electron-builder"
  },
	"devDependencies": {
		"@electron/rebuild": "^4.0.1",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@testing-library/svelte": "^5.2.8",
		"@types/better-sqlite3": "^7.6.13",
		"@types/electron": "^1.4.38",
		"@types/node": "^20.11.24",
		"concurrently": "^9.2.0",
		"cross-env": "^7.0.3",
		"electron": "^29.1.0",
		"electron-builder": "^24.13.3",
		"electron-is-dev": "^3.0.0",
		"eslint": "^9.30.1",
		"eslint-plugin-svelte": "^3.10.1",
		"module-alias": "^2.2.3",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"renamer": "^5.0.2",
		"rimraf": "^6.0.1",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"ts-node": "^10.9.2",
		"tsc-watch": "^7.1.1",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.0.0",
		"vite": "^6.3.5",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.2.4",
		"wait-on": "^8.0.3"
	},
	"dependencies": {
		"better-sqlite3": "^12.2.0",
		"music-metadata": "^11.6.0",
		"play-sound": "^1.1.6"
	}
}
