{
	"name": "heartstring",
	"private": true,
	"version": "0.0.1",
	"main": "electron.cjs",
	"type": "module",
	"scripts": {
		"lint": "prettier --check . && eslint .",
		"lint:fix": "prettier --write . && eslint --fix .",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"test": "vitest run",
		"test:watch": "vitest",
		"clean": "rimraf dist dist-electron",
		"rebuild": "electron-rebuild -f -w better-sqlite3",
		"postinstall": "npm run rebuild",
		"build:frontend": "vite build",
		"build:electron": "vite build --config vite.main.config.ts",
		"build": "npm run clean && npm run build:frontend && npm run build:electron",
		"dev": "concurrently \"npm run dev:frontend\" \"npm run dev:electron-watch\" \"wait-on tcp:5173 && electron .\"",
		"dev:frontend": "vite dev",
		"dev:electron-watch": "vite build --config vite.main.config.ts --watch",
		"start": "electron .",
		"build:app": "npm run build && npm run rebuild && electron-builder"
	},
	"devDependencies": {
		"@electron/rebuild": "^4.0.1",
		"@rollup/plugin-commonjs": "^28.0.6",
		"@rollup/plugin-typescript": "^12.1.4",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@testing-library/svelte": "^5.2.8",
		"@types/better-sqlite3": "^7.6.13",
		"@types/electron": "^1.4.38",
		"@types/node": "^20.11.24",
		"concurrently": "^9.2.0",
		"cross-env": "^7.0.3",
		"electron": "^29.1.0",
		"electron-builder": "^24.13.3",
		"electron-is-dev": "^3.0.0",
		"eslint": "^9.30.1",
		"eslint-plugin-svelte": "^3.10.1",
		"module-alias": "^2.2.3",
		"nodemon": "^3.1.10",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"renamer": "^5.0.2",
		"rimraf": "^6.0.1",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"ts-node": "^10.9.2",
		"tsc-alias": "^1.8.16",
		"tsc-watch": "^7.1.1",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.0.0",
		"vite": "^6.3.5",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.2.4",
		"wait-on": "^8.0.3"
	},
	"dependencies": {
		"better-sqlite3": "^12.2.0",
		"music-metadata": "^11.6.0",
		"play-sound": "^1.1.6"
	}
}
