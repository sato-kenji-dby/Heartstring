// tsconfig.electron.json
{
  "compilerOptions": {
    // --- 核心编译选项 ---
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "./dist-electron",
    "sourceMap": true,

    // --- 路径和源码结构 ---
    "rootDir": ".", // 源码的根目录是项目根目录，因为它要看到 'preload.ts' 和 'src/'
    "baseUrl": ".", // 这是为了让下面的 paths 能正确工作
    "paths": {
			"$api": [
				"./src/api"
			],
			"$api/*": [
				"./src/api/*"
			],
			"$core": [
				"./src/core"
			],
			"$core/*": [
				"./src/core/*"
			],
			"$services": [
				"./src/services"
			],
			"$services/*": [
				"./src/services/*"
			],
			"$stores": [
				"./src/stores"
			],
			"$stores/*": [
				"./src/stores/*"
			],
			"$ui": [
				"./src/ui"
			],
			"$ui/*": [
				"./src/ui/*"
			],
			"$types": [
				"./src/types"
			],
			"$types/*": [
				"./src/types/*"
			]
		},
	"esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  // **核心：明确告诉tsc要编译哪些文件**
  "include": [
    "preload.ts",           // 编译根目录的 preload.ts
    "src/core/**/*.ts",     // 编译所有 core 目录下的 ts 文件
    "src/services/**/*.ts"  // 编译所有 services 目录下的 ts 文件
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist-electron",
    "src/routes",           // 明确排除前端 Svelte 代码
    "src/**/*.spec.ts"      // 排除所有测试文件
  ]
}